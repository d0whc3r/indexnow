{
  "name": "@d0whc3r/indexnow",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx index.ts",
    "compile:linux:x64": "bun build --compile --minify --target=bun-linux-x64-modern ./index.ts --outfile indexnow-linux-x64",
    "compile:linux:arm64": "bun build --compile --minify --target=bun-linux-arm64 ./index.ts --outfile indexnow-linux-arm64",
    "compile:darwin:x64": "bun build --compile --minify --target=bun-darwin-x64 ./index.ts --outfile indexnow-darwin-x64",
    "compile:darwin:arm64": "bun build --compile --minify --target=bun-darwin-arm64 ./index.ts --outfile indexnow-darwin-arm64",
    "compile:win:x64": "bun build --compile --minify --target=bun-windows-x64-modern ./index.ts --outfile indexnow-win-x64.exe",
    "compile": "run-p 'compile:**'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "1.7.3",
    "commander": "12.1.0",
    "fast-xml-parser": "4.4.1"
  },
  "devDependencies": {
    "@eslint/js": "9.8.0",
    "@types/bun": "latest",
    "@types/node": "22.1.0",
    "eslint": "9.8.0",
    "globals": "15.9.0",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "npm-run-all2": "6.2.2",
    "prettier": "3.3.3",
    "tsx": "4.17.0",
    "typescript": "5.5.4",
    "typescript-eslint": "8.0.1"
  },
  "lint-staged": {
    "*.{json,ts,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
